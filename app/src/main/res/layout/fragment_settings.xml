<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settings_divider0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="30sp"
            android:padding="5dip"
            android:background="#FF4844"
            android:text="@string/choose_languages"
            android:textColor="@color/text_color" />
        <Spinner
            android:id="@+id/profile_add_lang1"
            android:layout_height="wrap_content"
            android:entries="@array/languages_list"
            android:prompt="@string/profile_add_lang1"
            android:layout_width="match_parent"/>
        <Spinner
            android:id="@+id/profile_add_lang2"
            android:layout_height="wrap_content"
            android:entries="@array/languages_list"
            android:prompt="@string/profile_add_lang2"
            android:layout_width="match_parent"/>
        <Spinner
            android:id="@+id/profile_add_lang3"
            android:layout_height="wrap_content"
            android:entries="@array/languages_list"
            android:prompt="@string/profile_add_lang3"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/settings_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="30sp"
            android:padding="5dip"
            android:background="#FF4844"
            android:text="@string/choose_weekday"
            android:textColor="@color/text_color" />
        <CheckBox
            android:id="@+id/settings_monday"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_tuesday"
            android:layout_height="wrap_content"
            android:text="@string/tuesday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_wednesday"
            android:layout_height="wrap_content"
            android:text="@string/wednesday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_thursday"
            android:layout_height="wrap_content"
            android:text="@string/thursday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_friday"
            android:layout_height="wrap_content"
            android:text="@string/friday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_saturday"
            android:layout_height="wrap_content"
            android:text="@string/saturday"
            android:layout_width="fill_parent" />
        <CheckBox
            android:id="@+id/settings_sunday"
            android:layout_height="wrap_content"
            android:text="@string/sunday"
            android:layout_width="fill_parent" />
        <TextView
            android:id="@+id/settings_divider2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="30sp"
            android:padding="5dip"
            android:background="#FF4844"
            android:text="@string/choose_time"
            android:textColor="@color/text_color"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/selected_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="30sp"
            android:padding="5dp"
            android:text="@string/default_time"
            android:textColor="@color/text_color"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:height="30sp"
            android:padding="5dip"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/profile_choose_time_start"
                android:layout_height="wrap_content"
                android:entries="@array/hours"
                android:prompt="@string/begin"
                android:layout_weight="0.5"
                android:height="40sp"
                android:padding="5dip"
                android:layout_width="match_parent"/>
            <Spinner
                android:id="@+id/profile_choose_time_end"
                android:layout_height="wrap_content"
                android:entries="@array/hours"
                android:prompt="@string/end"
                android:layout_weight="0.5"
                android:height="40sp"
                android:padding="5dip"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:height="30sp"
            android:padding="5dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selected_time2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:height="30sp"
                android:layout_weight="0.5"
                android:padding="5dip"
                android:text="@string/period"
                android:textColor="@color/text_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Spinner
                android:id="@+id/profile_choose_period"
                android:layout_height="wrap_content"
                android:entries="@array/time"
                android:layout_weight="0.5"
                android:height="30sp"
                android:padding="5dip"
                android:prompt="@string/period"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/profile_check"
            android:layout_height="wrap_content"
            android:text="@string/profile_check_event"
            android:layout_width="fill_parent" />

        <Button
            android:id="@+id/profile_button_submit"
            android:layout_height="wrap_content"
            android:text="@string/profile_change_button"
            android:onClick="sendFeedback"
            android:layout_width="fill_parent"/>

    </LinearLayout>
</ScrollView>
