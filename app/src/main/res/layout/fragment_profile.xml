<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>
	    <ImageView android:id="@+id/profile_image"
	        android:layout_width="wrap_content"
            android:gravity="center"
	        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
	        android:src="@drawable/profile_default_small"/>
        <TextView
            android:id="@+id/profile_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_login" />
        <TextView
            android:id="@+id/profile_lang1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_lang1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_days1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_days1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_words_shown1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_words_shown1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_phrases_shown1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_phrases_shown1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_exams1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_exams1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_rights1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_rights1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_questions1"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_questions1"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_lang2"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_lang2"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/profile_lang3"
            android:layout_height="wrap_content"
            android:prompt="@string/profile_lang3"
            android:layout_width="match_parent"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/seekBar1" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/tvYMax"
            android:layout_marginRight="5dp"
            android:max="200"
            android:paddingBottom="12dp" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar2"
            android:layout_margin="8dp"
            android:layout_marginBottom="35dp"
            android:layout_toLeftOf="@+id/tvXMax"
            android:layout_marginRight="5dp"
            android:max="1500"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tvXMax"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seekBar1"
            android:layout_alignParentRight="true"
            android:text="500"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvYMax"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seekBar2"
            android:layout_alignParentRight="true"
            android:text="500"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</ScrollView>
